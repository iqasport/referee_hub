{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ESNext",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "*": ["app/javascript/*"],
      "test-utils": ["app/utils/test-utils"]
    }
  },
  "include": ["./app/**/*"],
  "exclude": [
    "./node_modules",
    "./vendor",
    "./public/assets/**/*",
    "./public/packs/**/*",
    "./app/assets/**/*"
  ],
  "compileOnSave": true
}
